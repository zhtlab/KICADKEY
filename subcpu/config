# config for zhtlab bootloader

CONFIG_PRODUCT_NAME_TEXT        = "KICADKEY"

CONFIG_VERSION_FIRM_TEXT        = "0.01.00.201801070"

CONFIG_VERSION_BOOT                     = 0x19010900
CONFIG_VERSION_BOOT_TEXT        = "0.01.00.201901090"

CONFIG_ROOTDIR                  = .

CONFIG_ARCHTYPE_CORTEX_M0       = 0x01
CONFIG_ARCHTYPE_CORTEX_M0PLUS   = 0x02
CONFIG_ARCHTYPE_CORTEX_M3       = 0x30
CONFIG_ARCHTYPE_CORTEX_M4       = 0x40


# definitions for start_gcc.s
CONFIG_TARGETCODE_BOOT1         = 0x01
CONFIG_TARGETCODE_BOOT2         = 0x02
CONFIG_TARGETCODE_FIRM          = 0x11
