require         'rubygems'
require         'optparse'

VERSION         = "201809180"

$c = 0xff


def ShowHelp
  print "print charachter\n";
  print "  options:\n";
  print "    -c [val]:        charachter\n";
  print "    -v:              version\n";
  print "    -h:              help\n";
  exit(0);
end


def GetParam
  opt = OptionParser.new

  opt.on('-c VAL')           { |v| $c      = v.hex}
  opt.on('-v')               { print VERSION+"\n"; exit }
  opt.on('-h')               { ShowHelp(); exit }

  opt.parse!(ARGV)

  rescue
    ShowHelp()
  exit(1)
end


def main
  GetParam()

  while true
    begin
      putc $c
    rescue
      break
    end
  end
end


main()
